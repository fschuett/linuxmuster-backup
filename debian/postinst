#!/bin/bash
#
# postinst script for linuxmuster-backup
# fschuett@gymnasium-himmelsthuer.de
# 24.06.2013
# GPL v3
#

# see: dh_installdeb(1)

set -e

# summary of how this script can be called:
#        * <postinst> `configure' <most-recently-configured-version>
#        * <old-postinst> `abort-upgrade' <new version>
#        * <conflictor's-postinst> `abort-remove' `in-favour' <package>
#          <new-version>
#        * <deconfigured's-postinst> `abort-deconfigure' `in-favour'
#          <failed-install-package> <version> `removing'
#          <conflicting-package> <version>
# for details, see http://www.debian.org/doc/debian-policy/ or
# the debian-policy package
#

case "$1" in

 configure)

  # read linuxmuster defaults
  . /usr/share/linuxmuster/config/dist.conf

  # only root may use helperfunctions.sh
  chmod 600 $HELPERFUNCTIONS

  # check all necessary dirs and create them if needed
  for i in $BACKUPDIR $BACKUPMNTPOINT; do
   [ -d "$i" ] || mkdir -p $i
  done

  # fix mindi conf
  MINDI=/etc/mindi/mindi.conf
  if [ -e $STATICTPLDIR/01_backup$MINDI ]; then
   if [ -e $MINDI ]; then
    mv -f $MINDI $MINDI.dpkg-bak
   fi
   cp $STATICTPLDIR/01_backup$MINDI $MINDI
  fi
  # fix backup.conf
  BACKUP=/etc/linuxmuster/backup.conf
  . $BACKUP
  if [ "x$cronbackup" = "x" ]; then
    echo "# should cron scheduled automatic backups be done? yes or no." >>$BACKUP
    echo "cronbackup=no" >>$BACKUP
    echo "" >>$BACKUP
  fi
  # configure schulkonsole
  SSCRIPTS=/usr/share/schulkonsole/scripts
  [ -x "$SSCRIPTS/make-menus.sh" ] && "$SSCRIPTS/make-menus.sh"
  [ -x "$SSCRIPTS/update-permissions.sh" ] && "$SSCRIPTS/update-permissions.sh"

 ;;

 abort-upgrade|abort-remove|abort-deconfigure)
 ;;

 *)
  echo "postinst called with unknown argument \`$1'" >&2
  exit 1
 ;;

esac

# dh_installdeb will replace this with shell code automatically
# generated by other debhelper scripts.

#DEBHELPER#

exit 0
